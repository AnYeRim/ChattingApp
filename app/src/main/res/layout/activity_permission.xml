<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="채팅 어플 이용 안내"
            style="@style/txtTitle1"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="채팅을 이용하려면\n다음 권한을 허용해주세요"
            style="@style/txtContents1"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전화"
            style="@style/txtTitle2"
            android:padding="7dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저장"
            style="@style/txtTitle2"
            android:padding="7dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주소록"
            style="@style/txtTitle2"
            android:padding="7dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="위 권한에 동의 후 채팅 어플이 시작됩니다.\n 아래 허용하기 버튼을 눌러 권한을 허용해주세요"
            android:padding="7dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnPermit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="허용하기"
        style="@style/txtButton"/>

</LinearLayout>