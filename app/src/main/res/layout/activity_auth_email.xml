<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이메일을 등록해주세요"
        style="@style/txtTitle1"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이메일"
        style="@style/edtTitle"
        android:padding="20dp"/>

    <LinearLayout
        android:id="@+id/linearSendMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/chkTerm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="개인정보 수집 및 이용 동의"
            style="@style/txtTitle3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="동의하지 않아도 이용 가능합니다."
            style="@style/txtContents2"/>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="인증메일 발송"
            style="@style/btnEnabled"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearAuthNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

    <EditText
        android:id="@+id/edtAuthNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="인증번호"
        style="@style/edtTitle"
        android:padding="20dp"
        android:visibility="visible"/>

        <Button
            android:id="@+id/btnOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="확인"
            style="@style/btnEnabled"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txtLater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="나중에 하기"
        style="@style/txtContents2"
        android:textAlignment="center"
        android:padding="7dp"/>

</LinearLayout>