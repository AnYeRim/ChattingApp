<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".View.Fragment.AuthPhoneFragment">

    <TextView
        android:id="@+id/txtNotice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="전화번호를 입력해주세요"
        android:textAlignment="center"
        style="@style/txtTitle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtPhone"
        style="@style/edtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="전화번호"
        app:layout_constraintTop_toBottomOf="@+id/txtNotice"
        app:layout_constraintStart_toStartOf="@+id/txtNotice"
        app:layout_constraintEnd_toStartOf="@+id/btnAuth" />

    <Button
        android:id="@+id/btnAuth"
        style="@style/btnDisabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증"
        app:layout_constraintTop_toTopOf="@+id/edtPhone"
        app:layout_constraintStart_toEndOf="@+id/edtPhone"
        app:layout_constraintEnd_toEndOf="@+id/txtNotice" />

    <EditText
        android:id="@+id/edtAuthNum"
        style="@style/edtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="인증번호"
        app:layout_constraintEnd_toEndOf="@+id/txtNotice"
        app:layout_constraintStart_toStartOf="@+id/txtNotice"
        app:layout_constraintTop_toBottomOf="@+id/edtPhone" />

    <Button
        android:id="@+id/btnOK"
        style="@style/btnDisabled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="확인"
        app:layout_constraintTop_toBottomOf="@+id/edtAuthNum"
        app:layout_constraintStart_toStartOf="@+id/txtNotice"
        app:layout_constraintEnd_toEndOf="@+id/txtNotice"/>

    <TextView
        android:id="@+id/txtBackBegin"
        style="@style/txtContents3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:text="처음으로 돌아가기"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/btnOK"
        app:layout_constraintStart_toStartOf="@+id/txtNotice"
        app:layout_constraintEnd_toEndOf="@+id/txtNotice" />

</androidx.constraintlayout.widget.ConstraintLayout>