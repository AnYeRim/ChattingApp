<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".View.Fragment.PasswordFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="새로운 계정을 생성합니다"
        android:textAlignment="center"
        style="@style/txtTitle1"
        android:layout_marginVertical="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내 연락처(ID)"
        android:textAlignment="center"
        style="@style/txtContents2"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        style="@style/txtTitle2"
        android:layout_marginBottom="20dp"
        android:padding="7dp" />

    <EditText
        android:id="@+id/edtPW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호(8-32자)"
        android:inputType="textPassword"
        style="@style/edtTitle"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edtCheckPW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호 확인(8-32자)"
        android:inputType="textPassword"
        style="@style/edtTitle"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnOK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="확인"
        style="@style/btnDisabled"/>

    <TextView
        android:id="@+id/txtBackBegin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="처음으로 돌아가기"
        android:textAlignment="center"
        style="@style/txtContents3"
        android:padding="7dp" />

</LinearLayout>