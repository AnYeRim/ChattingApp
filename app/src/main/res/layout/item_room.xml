<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/linearRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="7dp">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/profile_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtRoomTitle"
            style="@style/txtTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:text="이름"
            app:layout_constraintBottom_toTopOf="@+id/txtMessage"
            app:layout_constraintLeft_toRightOf="@id/imgProfile"
            app:layout_constraintTop_toTopOf="@+id/imgProfile" />

        <TextView
            android:id="@+id/txtTotal"
            style="@style/txtContents2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="3"
            app:layout_constraintBottom_toBottomOf="@+id/txtRoomTitle"
            app:layout_constraintLeft_toRightOf="@id/txtRoomTitle"
            app:layout_constraintTop_toTopOf="@+id/txtRoomTitle" />

        <ImageView
            android:id="@+id/imgAlarm"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/alarm"
            app:layout_constraintBottom_toBottomOf="@+id/txtRoomTitle"
            app:layout_constraintLeft_toRightOf="@id/txtTotal"
            app:layout_constraintTop_toTopOf="@+id/txtRoomTitle" />

        <TextView
            android:id="@+id/txtUpdateDate"
            style="@style/txtContents4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오후 8:28"
            app:layout_constraintBottom_toBottomOf="@+id/txtRoomTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgProfile" />

        <TextView
            android:id="@+id/txtMessage"
            style="@style/txtContents3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:text="메세지11111111111111111111111111111111111111"
            app:layout_constraintBottom_toBottomOf="@+id/imgProfile"
            app:layout_constraintStart_toStartOf="@+id/txtRoomTitle"
            app:layout_constraintTop_toBottomOf="@+id/txtRoomTitle" />

        <TextView
            android:id="@+id/txtNewMessage"
            style="@style/txtContents3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="#ff1100"
            app:layout_constraintBottom_toBottomOf="@+id/txtMessage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtMessage" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>