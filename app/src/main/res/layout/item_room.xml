<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearRoom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="15dp"
    android:paddingVertical="7dp">

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/profile_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/txtRoomTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        style="@style/txtTitle3"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@+id/imgProfile"
        app:layout_constraintLeft_toRightOf="@id/imgProfile"
        app:layout_constraintBottom_toTopOf="@+id/txtMessage" />

    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        style="@style/txtContents2"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@+id/txtRoomTitle"
        app:layout_constraintLeft_toRightOf="@id/txtRoomTitle"
        app:layout_constraintBottom_toBottomOf="@+id/txtRoomTitle"/>

    <ImageView
        android:id="@+id/imgAlarm"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/alarm"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@+id/txtRoomTitle"
        app:layout_constraintLeft_toRightOf="@id/txtTotal"
        app:layout_constraintBottom_toBottomOf="@+id/txtRoomTitle"/>

    <TextView
        android:id="@+id/txtUpdateDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오후 8:28"
        style="@style/txtContents4"
        app:layout_constraintTop_toTopOf="@+id/imgProfile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/txtRoomTitle" />

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상태메세지"
        style="@style/txtContents3"
        app:layout_constraintTop_toBottomOf="@+id/txtRoomTitle"
        app:layout_constraintStart_toStartOf="@+id/txtRoomTitle"
        app:layout_constraintBottom_toBottomOf="@+id/imgProfile"/>

    <TextView
        android:id="@+id/txtNewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textColor="#ff1100"
        style="@style/txtContents3"
        app:layout_constraintTop_toTopOf="@+id/txtMessage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/txtMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>