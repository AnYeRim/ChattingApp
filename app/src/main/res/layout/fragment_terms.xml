<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".View.Fragment.TermsFragment">

        <TextView
            style="@style/txtTitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="이용 약관에 동의해주세요"
            android:textAlignment="center" />

        <CheckBox
            android:id="@+id/chkAll"
            style="@style/txtTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="7dp"
            android:text="모두 동의합니다."
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_term"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btnAgree"
            style="@style/btnEnabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="동의하고 계속 진행합니다" />

        <TextView
            android:id="@+id/txtBackBegin"
            style="@style/txtContents3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="처음으로 돌아가기"
            android:textAlignment="center" />

    </LinearLayout>
</layout>